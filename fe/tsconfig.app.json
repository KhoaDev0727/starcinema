{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowUnusedLabels": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"],
  "exclude": [
    "src/components/MovieManagement/AddMovieModal.tsx",
    "src/components/MovieManagement/MoviesAdmin.tsx",
    "src/components/MovieManagement/UpdateMovieModal.tsx",
    "src/pages/MovieManagement/MoviesAdminPage.tsx",
    "src/pages/CinemaRoomManagement/CinemaRoomPage.tsx"
  ]
}
